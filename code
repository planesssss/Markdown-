from setuptools import setup, find_packages
import os

with open("README.md", "r", encoding="utf-8") as fh:
    long_description = fh.read()

with open("requirements.txt", "r", encoding="utf-8") as fh:
    requirements = [line.strip() for line in fh if line.strip() and not line.startswith("#")]

setup(
    name="md-link-checker",
    version="1.0.0",
    author="何文国",
    author_email="hewenguo@example.com",  # 使用姓在前名在后的格式
    description="何文国制作的Markdown链接检查工具",
    long_description=long_description,
    long_description_content_type="text/markdown",
    url="https://github.com/hewenguo/markdown-link-checker",
    packages=find_packages(),
    classifiers=[
        "Development Status :: 5 - Production/Stable",
        "Intended Audience :: Developers",
        "Topic :: Software Development :: Quality Assurance",
        "License :: OSI Approved :: MIT License",
        "Programming Language :: Python :: 3",
        "Programming Language :: Python :: 3.7",
        "Programming Language :: Python :: 3.8",
        "Programming Language :: Python :: 3.9",
        "Programming Language :: Python :: 3.10",
        "Operating System :: OS Independent",
    ],
    python_requires=">=3.7",
    install_requires=requirements,
    entry_points={
        "console_scripts": [
            "linkchecker=linkchecker.cli:main",
        ],
    },
    keywords="markdown, link, checker, validator, documentation, 何文国",
    project_urls={
        "Bug Reports": "https://github.com/hewenguo/markdown-link-checker/issues",
        "Source": "https://github.com/hewenguo/markdown-link-checker",
        "Author Website": "https://hewenguo.dev",
    },
)
